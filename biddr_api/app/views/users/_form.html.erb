
<%= render 'shared/errors', obj: @user %>

<div class="row">
    <div class=col-sm-12 >
        <%= form_for @user do |f| %>
            <div class="form-group row">
                <div class="col-form-label col-sm-2">
                    <%= f.label :username %>
                </div>
                <div class="col-sm-8">
                    <%= f.text_field :username, class: 'form-control', placeholder: 'Enter username', autofocus: true %>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-form-label col-sm-2">
                    <%= f.label :email %>
                </div>
                <div class="col-sm-8">
                        <%= f.email_field :email, class: "form-control", placeholder: "Enter Email"%>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-form-label col-sm-2">
                    <%= f.label :password %>
                </div>
                <div class="col-sm-8">
                        <%= f.password_field :password, class: "form-control", placeholder: "Enter password"%>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-form-label col-sm-2">
                </div>
                <div class="position-relative col-sm-10 mt-1">
                    <%= f.submit(@user.new_record? ? 'Sing Up' : "Update account", class:'btn btn-outline-success btn-sm') %>
                </div>
            </div>

        <% end %>
        
        <div align="center">
            [<%= link_to 'Cancel request and return to posts listing', posts_path %>]
        </div>
    </div>
</div>